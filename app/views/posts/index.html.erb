<div class="row">
  <% @posts.each do |post| %>
  <div class="col-md-4">
    <div class="card mb-2 border-0">
      <div class="card-body">
        <%= image_tag(post.picture_url, width: '100%', height: '300px') if post.picture.present? %>
        <p>
          <%= post.description[0..28] %>
          <%= link_to '..read more', post, class: "card-link text-muted" %>
        </p>
        <p><%= User.find(post.user_id).username %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>



